{{ header }}
<div id="product-category" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
    <div id="content">
      <h2>{{ heading_title }}</h2>  
      {% if categories %}
      <h3>{{ text_refine }}</h3>
      {% if categories|length <= 5 %}
      <div class="row">
        <div class="col-sm-3">
          <ul>
            {% for category in categories %}
            <li><a href="{{ category.href }}">{{ category.name }}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
      {% else %}
      <div class="row">{% for category in categories|batch((categories|length / 4)|round(1, 'ceil')) %}
        <div class="col-sm-3">
          <ul>
            {% for child in category %}
            <li><a href="{{ child.href }}">{{ child.name }}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endfor %}</div>
      <br />
      {% endif %}
      {% endif %}          
     <div class="col-md-4 col-xs-7">
     <div class="form-group input-group input-group-sm">     
    {% if WithSubCategories %} 
    <label class="input-group-addon" for="input-catid">{{ text_refine }}</label>
    <select id="input-catid" class="form-control" onchange="viewAllProductsInCategory(this.options[this.selectedIndex].value)"> 
        <option value=0 {% if catid==0 %} selected="selected"{% endif %} >All</option>
        {% for categorry in WithSubCategories %}
            <option value="{{ categorry.category_id }}"{% if catid==categorry.category_id %} selected="selected"{% endif %}>{{ categorry.name }} - {{ categorry.product_total }}шт.</option>
        {% endfor %}
    </select> 
    </div>
    </div>
   {% endif %}
         <div class="col-md-3 col-xs-6">
          <div class="form-group input-group input-group-sm">
            <label class="input-group-addon" for="input-limit">{{ text_limit }}</label>
            <select id="input-limit" class="form-control" onchange="location = this.value;">
              {% for limits in limits %}
              {% if limits.value == limit %}
              <option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>
              {% else %}
              <option value="{{ limits.href }}">{{ limits.text }}</option>
              {% endif %}
              {% endfor %}
            </select>
          </div>
        </div> 
        
       {% if products %}  
               <div style="width:100%; max-height: 800px; overflow: scroll; border: 2px solid gray; margin-bottom: 20px;">
                   <table style="border-collapse: collapse; border: 1px solid black;">
        <tr>
            <th style="width:2%; border: 1px solid black; padding:3px;">№№</th>
            <th style="width:20%; border: 1px solid black; padding:3px;">Product name</th>
            <th style="width:76%; border: 1px solid black; padding:3px;">Product description</th>
            <th style="width:2%; border: 1px solid black; padding:3px;">Price</th></tr>
      <div style="width:100%"> {% for product in products %}        
        <tr>
            <td style="padding:3px; border: 1px solid black;">{{ product.pr_count }}</td>
            <td style="padding:3px; border: 1px solid black;"><a href="{{ product.href }}">{{ product.name }}</a></td>
            <td style="padding:3px; border: 1px solid black;"><button id="{{ product.product_id }}" type="button" onclick="showDescription(this.id)">Show description</button>
                <div style="display:none;" id="div{{ product.product_id }}"><a href="{{ product.href }}"><img style="float:left; width:80px; margin-right: 5px;" src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a>{{ product.description }}</div></td>
            <td style="padding:3px; border: 1px solid black;">{{ product.price }}</td>
        </tr>        
        {% endfor %} 
            </table>
            </div>
        {% endif %}  
        
      {% if products %}
      <div class="row">
        <div class="col-md-2 col-sm-6 hidden-xs">
          <div class="btn-group btn-group-sm">
            <button type="button" id="list-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_list }}"><i class="fa fa-th-list"></i></button>
            <button type="button" id="grid-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_grid }}"><i class="fa fa-th"></i></button>
          </div>
        </div>
        <div class="col-md-3 col-sm-6">
          <div class="form-group"><a href="{{ compare }}" id="compare-total" class="btn btn-link">{{ text_compare }}</a></div>
        </div>
        <div class="col-md-4 col-xs-6">
          <div class="form-group input-group input-group-sm">
            <label class="input-group-addon" for="input-sort">{{ text_sort }}</label>
            <select id="input-sort" class="form-control" onchange="location = this.value;">              
              {% for sorts in sorts %}
              {% if sorts.value == '%s-%s'|format(sort, order) %}   
              <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
              {% else %}
              <option value="{{ sorts.href }}">{{ sorts.text }}</option>
              {% endif %}
              {% endfor %}
            </select>
          </div>
        </div>
        <div class="col-md-3 col-xs-6">
          <div class="form-group input-group input-group-sm">
            <label class="input-group-addon" for="input-limit">{{ text_limit }}</label>
            <select id="input-limit" class="form-control" onchange="location = this.value;">
              {% for limits in limits %}
              {% if limits.value == limit %}
              <option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>
              {% else %}
              <option value="{{ limits.href }}">{{ limits.text }}</option>
              {% endif %}
              {% endfor %}
            </select>
          </div>
        </div>
      </div>
      <div class="row"> {% for product in products %}
        <div class="product-layout product-list col-xs-12">
          <div class="product-thumb">
            <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
            <div>
              <div class="caption">
                <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                <p>{{ product.description }}</p>
                {% if product.price %}
                <p class="price"> {% if not product.special %}
                  {{ product.price }}
                  {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
                  {% if product.tax %} <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> {% endif %} </p>
                {% endif %}
                {% if product.rating %}
                <div class="rating"> {% for i in 1..5 %}
                  {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>{% endif %}
                  {% endfor %} </div>
                {% endif %} </div>
              <div class="button-group">
                <button type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span></button>
                <button type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                <button type="button" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-exchange"></i></button>
              </div>
            </div>
          </div>
        </div>
        {% endfor %} </div>
</div>
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      {% endif %}
      {% if not categories and not products %}
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
      </div>
    </div>
</div>
<script type="text/javascript">
function showDescription(clicked_id)
  {
      //alert(clicked_id);
      var divToShow = document.getElementById('div'+clicked_id);
      if(divToShow.style.display =="none"){
            divToShow.style.display = "block";
            document.getElementById(clicked_id).textContent = 'Hide';
        }
        else{
            divToShow.style.display = "none";
            document.getElementById(clicked_id).textContent = 'Show description';
        }
  }
  function viewAllProductsInCategory(id){	  
      var url = window.location.href;
      if(url.indexOf('&')!=-1){
			url = url.slice(0, url.indexOf('&'));
		  }
    var qs = "&catid=" + id;
    window.location.href = url + qs; 
  }
</script>
